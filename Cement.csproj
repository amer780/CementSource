<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
  	<TargetFramework>netstandard2.0</TargetFramework>
  	<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BepInEx.Analyzers" Version="1.*" PrivateAssets="all" />
    <PackageReference Include="BepInEx.Core" Version="5.*" />
    <PackageReference Include="UnityEngine.Modules" Version="2020.3.44" IncludeAssets="compile" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="ref\" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
  	<Reference Include="Assembly-CSharp">
  	  <HintPath>ref\Assembly-CSharp_publicized.dll</HintPath>
  	</Reference>
  	<Reference Include="com.unity.multiplayer-hlapi.Runtime">
  	  <HintPath>ref\com.unity.multiplayer-hlapi.Runtime-nstrip.dll</HintPath>
  	</Reference>
  	<Reference Include="MMHOOK_Assembly-CSharp">
  	  <HintPath>ref\MMHOOK_Assembly-CSharp-nstrip.dll</HintPath>
  	</Reference>
  	<Reference Include="Unity.InputSystem">
  	  <HintPath>ref\Unity.InputSystem-nstrip.dll</HintPath>
  	</Reference>
  	<Reference Include="Unity.TextMeshPro">
  	  <HintPath>ref\Unity.TextMeshPro-nstrip.dll</HintPath>
  	</Reference>
  	<Reference Include="UnityEngine.UI">
  	  <HintPath>ref\UnityEngine.UI-nstrip.dll</HintPath>
  	</Reference>
  </ItemGroup>
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="COPY &quot;$(TargetPath)&quot; &quot;D:\SteamLibrary\steamapps\common\Gang Beasts\BepInEx\plugins\Cement\&quot;" />
    <Exec Command="COPY &quot;$(TargetPath)&quot; &quot;.\build\&quot;" />
    <Exec Command="COPY .\build\cement &quot;D:\SteamLibrary\steamapps\common\Gang Beasts\BepInEx\plugins\Cement\&quot;" />
    <Exec Command="COPY .\build\CementInstaller.exe &quot;D:\SteamLibrary\steamapps\common\Gang Beasts\BepInEx\plugins\Cement\&quot;" />
  </Target>
</Project>